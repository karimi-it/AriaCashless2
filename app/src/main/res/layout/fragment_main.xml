<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradiant"
    android:layoutDirection="rtl">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:elevation="2dp"
        android:shadowDx="0.5"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:strokeColor="@color/design_default_color_primary"
        app:strokeWidth="0.5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                android:src="@drawable/mcac_logo_3d"
                app:layout_constraintBottom_toTopOf="@+id/btn_get_balance"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintWidth_percent="0.3" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_get_balance"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="8dp"
                android:drawableTop="@drawable/bill_paid"
                android:gravity="bottom|center_horizontal"
                android:padding="16dp"
                android:text="@string/get_balance"
                android:textAlignment="gravity"
                android:textSize="28sp"
                android:textStyle="bold"
                app:backgroundTint="#E91E63"
                app:cornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_card_to_card"
                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.2" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_card_to_card"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="8dp"
                android:drawableTop="@drawable/money_transfer"
                android:gravity="bottom|center_horizontal"
                android:padding="16dp"
                android:text="@string/card_to_card"
                android:textAlignment="gravity"
                android:textSize="28sp"
                android:textStyle="bold"
                app:backgroundTint="#6A1B9A"
                app:cornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_withdraw"
                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintStart_toEndOf="@+id/btn_get_balance"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.2" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_withdraw"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="8dp"
                android:drawableTop="@drawable/withdraw"
                android:gravity="bottom|center_horizontal"
                android:padding="16dp"
                android:text="@string/money_transfer"
                android:textAlignment="gravity"
                android:textSize="28sp"
                android:textStyle="bold"
                app:backgroundTint="#1565C0"
                app:cornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_bill_paid"
                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintStart_toEndOf="@+id/btn_card_to_card"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.2" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_bill_paid"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="8dp"
                android:drawableTop="@drawable/ic_qr_code_scanner"
                android:drawableTint="@color/white"
                android:gravity="bottom|center_horizontal"
                android:padding="16dp"
                android:text="@string/e_payment_services"
                android:textAlignment="gravity"
                android:textSize="28sp"
                android:textStyle="bold"
                app:backgroundTint="#558B2F"
                app:cornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintStart_toEndOf="@+id/btn_withdraw"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.2" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
