<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#e6e6e6"
    tools:context=".ui.splash.SplashFragment">

<androidx.appcompat.widget.AppCompatImageView
    android:id="@+id/img_logo"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:src="@drawable/mcac_logo_3d"
    app:layout_constraintBottom_toTopOf="@+id/tv_mabna"
    app:layout_constraintEnd_toEndOf="@+id/tv_mabna"
    app:layout_constraintHeight_percent="0.3"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="@+id/tv_mabna"
    app:layout_constraintTop_toTopOf="parent"
    android:adjustViewBounds="true"
    app:layout_constraintVertical_chainStyle="packed" />

<androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/tv_mabna"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/mabna"
    android:textColor="#004877"
    android:textSize="70dp"
    android:textStyle="bold"
    app:layout_constraintBottom_toTopOf="@+id/img_mabna"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/img_logo"
    app:layout_constraintVertical_chainStyle="packed" />
<androidx.appcompat.widget.AppCompatImageView
    android:id="@+id/img_mabna"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:src="@drawable/mabna"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="@+id/tv_mabna"
    app:layout_constraintHeight_percent="0.3"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="@+id/tv_mabna"
    app:layout_constraintTop_toBottomOf="@+id/tv_mabna"
    android:adjustViewBounds="true"
    app:layout_constraintVertical_chainStyle="packed" />

</androidx.constraintlayout.widget.ConstraintLayout>